  body.subpage
    
    header#header
      .inner
        a.logo(href='index.html')
        nav#nav
          a(href='index') Home
          if(logged_in)
              a(href='mydocs') My Documents
              a(href='elements') Account
          else
            a(href='/login') Log In
          a(href='about') About
        a.navPanelToggle(href='#navPanel')
          span.fa.fa-bars
    section
      .columnLeft
        embed(src=file, width='100%', height='800px')
      .columnRight
        if(logged_in)
            a.button(href='/edit'+'?id='+doc.pdf) edit            
        table
            thead
            tbody
            each field,i in doc
                if(i != 'pdf')
                    
                    if(i =='date')
                        tr
                            td= i
                            td= field.substr(0,10)
                    
                    else if(i =='last_modified')
                        tr    
                            td= i
                            td= field.substr(0,10)
                    
                    else if(i =='time_uploaded')
                        tr
                            td= i
                            td= field.substr(0,10)
                    else
                        tr
                            td= i
                            td= field

