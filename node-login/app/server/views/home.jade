html
  style.
    #banner{
        background-image: url(../../images/banner.jpg); !important
    }
    .left {
    padding:20px;
    float:left;
    width:33%;/*The width is 20%, by default*/
    text-align:center;
    position:relative;
    display:block;
    margin:0 auto;
    }
    .center {
    padding:20px;
    float:left;
    width:33%;/*The width is 60%, by default*/
    text-align:center;
    position:relative;
    display:block;
    margin:0 auto;
    }
    .right {
    padding:20px;
    float:left;
    width:33%;/*The width is 20%, by default*/
    text-align:center;
    position:relative;
    display:block;
    margin:0 auto;
    }
  head
    title Home
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='css/main.css')
  body
    // Header
    header#header
      .inner
        a.logo(href='/index')
          strong Projection
          |  by TEMPLATED
        nav#nav
          a(href='/index') Home
          a(href='/login') Log In
          a(href='/search') Search Documents
        a.navPanelToggle(href='#navPanel')
          span.fa.fa-bars
    // Banner
    section#banner
      .inner
        header
          img(src='images/film.png', alt='film_pic', width='90', height='90')
          h1 Welcome to Micro History
        .flex
          p &quot;Insert text here&quot;
        footer
    // Three
    section#three.wrapper.align-center
      .inner
        .flex.flex-2
          article
            .image.round
              img(src='images/pic01.jpg', alt='Pic 01')
            header
              h3
                | Need to contact a developer or admin?
                br
            p
              | Click the link below and leave an email and well contact you ASAP!
              br
            footer
              a.button(href='/contact') Contact Us
          article
            .image.round
              img(src='images/pic02.jpg', alt='Pic 02')
            header
              h3
                | Learn more about our project!
                br
            p Click the link below to read about us.
            footer
              a.button(href='/about') Learn More

    // Scripts
    script(src='js/views/jquery.min.js')
    script(src='js/views/skel.min.js')
    script(src='js/views/util.js')
    script(src='js/views/main.js')
