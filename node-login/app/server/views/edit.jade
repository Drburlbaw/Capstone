  head
    title Edit
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='css/main.css')
  body.subpage
    
    header#header
      .inner
        a.logo(href='index.html')
        nav#nav
          a(href='index') Home
          a(href='mydocs') My Documents
          a(href='elements') Account
        a.navPanelToggle(href='#navPanel')
          span.fa.fa-bars
    section
      .columnLeft
        embed(src=file, width='100%', height='800px')
      .columnRight
        p
        h3 Edit Form Information
        script(src='js/views/edit.js', language='Javascript', type='text/javascript')
        form(action='#', method='post', id='edit-form')
          .inner
            table(id='table',name='table')
                thead
                    th * = required
                tbody
                each field,i in doc

                    if(i != 'form_type')
                        if(i != 'pdf')
                            tr
                                case i
                                    when 'last_modified'
                                        td Last Modified
                                        td= doc.last_modified.substr(0,10)

                                    when 'time_uploaded'
                                        td Date Uploded
                                        td= doc.time_uploaded.substr(0,10)

                                    when 'date'
                                        td= "Date" + " *"
                                        td 
                                            input#docNum(name = i,type='text', placeholder=i,value = field.substr(0,10))
                                    when 'project_number'
                                        td= "Project Number"+ " *"
                                        td 
                                            input#docNum(name = i,type='text', placeholder=i,value = field)
                                    when 'city'
                                        td= "City"+ " *"
                                        td 
                                            input#docNum(name = i,type='text', placeholder=i,value = field)
                                    when 'county'
                                        td= "County" + " *"
                                        td 
                                            input#docNum(name = i,type='text', placeholder=i,value = field)
                                    default
                                        td= i
                                        td 
                                            input#docNum(name = i,type='text', placeholder=i,value = field)
                                        td
                                            input(type='button',style="width:auto;" value='delete', onclick="deleteRow(this);")
                    else 
                        tr
                            td= "Form Type" + " *"
                            td
                                .selectWrapper
                                  select.selectBox(name='form_type')
                                    case doc.form_type
                                        when 'WPA'
                                            option(value='') -Form Type-
                                            option(value='WPA',selected) WPA
                                            option(value='PWA') PWA
                                            option(value='CWA') CWA
                                        when 'PWA'
                                            option(value='') -Form Type-
                                            option(value='WPA') WPA
                                            option(value='PWA',selected) PWA
                                            option(value='CWA') CWA
                                        when 'CWA'
                                            option(value='') -Form Type-
                                            option(value='WPA') WPA
                                            option(value='PWA') PWA
                                            option(value='CWA', selected) CWA
                                        default
                                            option(value='') -Form Type-
                                            option(value='WPA') WPA
                                            option(value='PWA') PWA
                                            option(value='CWA') CWA   

            p
            ul.actions
              li
              input.button.alt(value='Submit Changes', type='submit')
              input(type='button', value='Add New Box', onclick="addRow();")
            p
            ul.actions
              li
                
